<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HowToActivity">

    <Button
            android:text="このアプリについて"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aboutThisAppButton" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="28dp"
            android:layout_marginTop="56dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="操作法について"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/howToPlayButton" app:layout_constraintStart_toEndOf="@+id/aboutThisAppButton"
            android:layout_marginStart="8dp" android:layout_marginTop="56dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.452"/>
    <Button
            android:text="注意事項"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:id="@+id/noticeButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/aboutThisAppButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>